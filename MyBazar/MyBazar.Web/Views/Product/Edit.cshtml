@model Product
@{
    ViewBag.Title = "Edit";
}


<h2>Edit Product</h2>
<form id="EditProduct">
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br />
    <input type="hidden" name="ID" value="@Model.ID" />
    <label>Description</label>
    <input name="Description" value="@Model.Description" />
    <br />
    <label>Price</label>
    <input name="Price" value="@Model.Price" />
    <br />
    <button id="btnUpdate" type="submit" class="btn btn-primary">Update</button>
</form>
<script>
    $('#btnUpdate').click(function () {

        $.ajax({
            type: 'POST',
            url: '/Product/Edit',
            data: $('#EditProduct').serialize()
        })
            .done(function (data) {
                $.alert('success');
                $('#tableConatainer').html(data);
                $('#ActionContainer').html("");

            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert('Fail..');
            })

    })
</script>